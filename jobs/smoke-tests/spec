---
name: smoke-tests
packages:
- smoke-tests

templates:
  errand.sh: bin/run
  bpm.yml.erb: config/bpm.yml
  run-smoke-test.sh.erb: bin/run-smoke-test

provides:
- name: smoke_tests
  type: smoke_tests
  properties:
  - db_username
  - db_password

consumes:
- name: database
  type: database
  optional: true
- name: mysql
  type: mysql
  optional: true


properties:
  db_username:
    description: 'Username for generated database user'
    default: 'smoke-tests-user'
  db_password:
    description: 'Password for generated database user'
